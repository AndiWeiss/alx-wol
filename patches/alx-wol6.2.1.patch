+	mutex_lock(&alx->mtx);
+	err = __alx_shutdown(pdev, &wol_en);
+	mutex_unlock(&alx->mtx);
+	if (!err) {
+		pci_wake_from_d3(pdev, wol_en);
+		pci_set_power_state(pdev, PCI_D3hot);
+	} else {
